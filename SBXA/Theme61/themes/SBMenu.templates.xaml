<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:Definitions="clr-namespace:SBXA.Shared.Definitions;assembly=SBXAShared" 
                    xmlns:rkt="http://schemas.sbxa.com/WPFControls"
                    >
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/BaseSBMenuStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- ******************************** -->
    <!-- TEMPLATE: SBMenuItemTemplate     -->
    <!-- ******************************** -->
    <HierarchicalDataTemplate x:Key="SBMenuItemTemplate" 
                              DataType="{x:Type Definitions:MenuOption}" 
                              ItemsSource="{Binding Path=MenuOptions}" >
        <ContentControl Style="{DynamicResource SBMenuItemStyle}" Focusable="False">
            <ContentControl.Content >
                <MultiBinding Converter="{StaticResource SBMenuItemTextToRichContentConverter}" ConverterParameter="*">
                    <Binding Path="TextKey" />
                    <Binding Path="SelectLetter" FallbackValue="" />
                </MultiBinding>
            </ContentControl.Content>

        </ContentControl>

    </HierarchicalDataTemplate>

    <!--    <HierarchicalDataTemplate x:Key="SBMenuItemTemplate"-->
    <!--                              DataType="{x:Type rkt:MenuOption}" -->
    <!--                              ItemsSource="{Binding Path=MenuOptions}" >-->
    <!--        <TextBlock x:Name="PART_SBMenuItemText" Text="{Binding Path=TextKey}" Style="{DynamicResource SBMenuItemStyle}" />-->
    <!--    </HierarchicalDataTemplate>-->

    <!-- ********************************** -->
    <!-- TEMPLATE: SBHorizontalMenuTemplate -->
    <!-- ********************************** -->
    <ControlTemplate x:Key="SBHorizontalMenuTemplate" TargetType="{x:Type rkt:SBMenu}">
        <Menu x:Name="PART_SBMenu"
                          ItemsSource="{Binding Path=MenuDefinition.MenuOptions, RelativeSource={RelativeSource TemplatedParent}}" 
                          ItemTemplate="{StaticResource SBMenuItemTemplate}"
                          Background="{TemplateBinding Background}"
                          KeyboardNavigation.TabNavigation="Cycle"
                          FocusManager.IsFocusScope="True"
                          Focusable="False"
              rkt:SBUISupport.TemplateName="ItemTemplate = SBMenuItemTemplate"
                          >
            <Menu.Resources>
                <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource BaseMenuItemStyle}" >
                    <!-- This from the BaseMenuItemStyle as it was causing exceptions to be thrown by the grid. -->
                    <Setter Property="rkt:SBMenu.HighlightedOption" Value="{Binding Path=(rkt:SBMenu.HighlightedOption), RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type rkt:SBMenu}}}" />
                </Style>
            </Menu.Resources>
            <Menu.InputBindings>
                <KeyBinding Key= "F1" Command="rkt:SBCommands.SBHelpCommand" />
            </Menu.InputBindings>
        </Menu>
    </ControlTemplate>

    <!-- ******************************** -->
    <!-- TEMPLATE: SBVerticalMenuTemplate -->
    <!-- ******************************** -->
    <ControlTemplate x:Key="SBVerticalMenuTemplate" TargetType="{x:Type rkt:SBMenu}">
        <Border BorderBrush="Black" BorderThickness="1,1,1,1"
                >
            <Menu x:Name="PART_SBMenu"
                  ItemsSource="{Binding Path=MenuDefinition.MenuOptions, RelativeSource={RelativeSource TemplatedParent}}" 
                  ItemTemplate="{StaticResource SBMenuItemTemplate}"
                  Background="{TemplateBinding Background}"
                  IsEnabled="{Binding Path=(rkt:SBForm.IsSBEnabled), RelativeSource={RelativeSource TemplatedParent}}"
                  rkt:SBUISupport.TemplateName="ItemTemplate = SBMenuItemTemplate"
                  >
                <Menu.Template>
                    <ControlTemplate>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </ControlTemplate>
                </Menu.Template>

                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" IsItemsHost="True"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <Menu.Resources>
                    <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource BaseMenuItemStyle}" >
                        <!-- This from the BaseMenuItemStyle as it was causing exceptions to be thrown by the grid. -->
                        <Setter Property="rkt:SBMenu.HighlightedOption" Value="{Binding Path=(rkt:SBMenu.HighlightedOption), RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type rkt:SBMenu}}}" />
                    </Style>
                </Menu.Resources>
                <Menu.InputBindings>
                    <KeyBinding Key = "OemQuestion" Command="rkt:SBCommands.SlashCommand" 
                                CommandTarget="{x:Static rkt:SBPlus.Current}"/>
                    <KeyBinding Key= "F1" Command="rkt:SBCommands.SBHelpCommand" />
                </Menu.InputBindings>
            </Menu>
        </Border>
    </ControlTemplate>


</ResourceDictionary>