<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rkt="http://schemas.sbxa.com/WPFControls"
    xmlns:sbs="http://schemas.sbxa.com/Shared">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/SBComboBox.xaml" />
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/Converters.xaml" />
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/LocalFormStyles.xaml" />
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/BaseSBFormStyle.xaml" />
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/ConfigurationTemplates.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type rkt:SBClientConfiguration}" BasedOn="{StaticResource BaseSBFormStyle}">
        <Setter Property="rkt:SBControl.ShouldSendSBCommands" Value="false" />
        <Setter Property="rkt:SBGUIAttribute.SBTitle" Value="ClientConfigurationTitle" />
        <Setter Property="rkt:SBForm.IsMaximizable" Value="False" />
        <Setter Property="rkt:SBForm.IsMinimizable" Value="False" />
        <Setter Property="rkt:SBForm.IsClosable" Value="False" />
        <Setter Property="rkt:SBForm.FormBorderWidth" Value="{x:Static rkt:GenericConstants.DEFAULT_FORM_BORDER_WIDTH}" />
        <Setter Property="IsCachable" Value="False" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=WillSendSBCommands, RelativeSource={RelativeSource Mode=Self}, Mode=OneWay }" Value="false">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <ContentControl Template="{DynamicResource SBFormWithBorderTemplate}">
                                <DockPanel LastChildFill="True">
                                    
                                    <Border  DockPanel.Dock="Top" Margin="5" Style="{StaticResource LogOnOptionsBorderStyle}" >

                                        <Grid Margin="2,2,2,2" ShowGridLines="False">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- **************************** Windows Identity *****************************-->
                                            <rkt:SBPrompt SBValue="{Binding Path=SBPlus.SBPlusRuntime.WindowsIdentity, RelativeSource={RelativeSource TemplatedParent}, Mode=OneWay}"
                                          Margin="1,1,1,1" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1" Width="Auto" HorizontalAlignment="Left"
                                          ToolTip="WinIdentToolTip"/>

                                            <rkt:SBPrompt Margin="1,1,1,1" Grid.Row="1" Grid.Column="0" rkt:SBGUIAttribute.SBString="WinIdentPmpt"/>

                                            <!-- **************************** Windows Rendering Tier *****************************-->
                                            <rkt:SBPrompt SBValue="{x:Static rkt:SBUISupport.RenderingTier}"
                                          Margin="1,1,1,1" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="1" Width="Auto" HorizontalAlignment="Left"
                                          ToolTip="RenderingTierToolTip"/>

                                            <rkt:SBPrompt Margin="1,1,1,1" Grid.Row="2" Grid.Column="0" rkt:SBGUIAttribute.SBString="RenderingTierPmpt"/>

                                            <!-- **************************** Terminal Server Session *****************************-->
                                            <rkt:SBPrompt SBValue="{x:Static rkt:SBUISupport.IsTerminalServicesSession}"
                                          Margin="1,1,1,1" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" Width="Auto" HorizontalAlignment="Left"
                                          ToolTip="IsTerminalServicesSessionToolTip"/>

                                            <rkt:SBPrompt Margin="1,1,1,1" Grid.Row="3" Grid.Column="0" rkt:SBGUIAttribute.SBString="IsTerminalServicesSessionPmpt"/>

                                            <!-- **************************** Configuration Name *****************************-->

<!--                                            <rkt:SBField x:Name="PART_SBConfigurationName" -->
<!--                                                         SBValue="{Binding Path=SBPlus.ApplicationDefinition.SelectedSession, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type rkt:SBForm}}, Mode=TwoWay}"-->
<!--                                                         Style="{StaticResource EntryFieldStyle}"-->
<!--                                                         Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1"-->
<!--                                                         TabIndex="0" Width="200"-->
<!--                                                         />-->

                                            <rkt:SBComboBox x:Name="PART_SBConfigurationName"
                                                            ItemsSource="{Binding Path=SBPlus.ApplicationDefinition.SelectedSession, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type rkt:SBForm}}}"
                                                            SBValue="{Binding Path=SBPlus.ApplicationDefinition.SelectedProfile, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type rkt:SBForm}}, Mode=TwoWay}"
                                                            Margin="5,0,0,0"
                                                            Grid.Row="0" Grid.Column="1" Width="200"
                                                            IsSynchronizedWithCurrentItem="False"
                                                            ShouldSendSBCommands="False"
                                                            TabIndex="0" 
                                                            rkt:SBControl.SBControlStyle="{DynamicResource EditableComboxControlStyle}"
                                                            />

                                            <rkt:SBPrompt Margin="1,1,1,1" Grid.Row="0" Grid.Column="0" rkt:SBGUIAttribute.SBString="ConfigurationNamePmpt"/>

                                            <!-- ************************************************ -->
                                            <Grid Grid.Row="0" Grid.Column="4" Grid.RowSpan="4" 
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Top"
                                              Margin="3,0,3,0"
                                              DockPanel.Dock="Bottom"
                                              >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <rkt:SBButton Style="{StaticResource SBLocalButtonStyle}"
                                                          Grid.Column="0" Grid.Row="0"
                                                          rkt:SBGUIAttribute.SBString="ExportConfiguration"
                                                          ToolTip="Export the configuration to a file."
                                                          Command="rkt:SBCommands.ExportConfigurationCommand"
                                                          Margin="3" HorizontalAlignment="Right"
                                                          />

                                                <rkt:SBButton Style="{StaticResource SBLocalButtonStyle}"
                                                          Grid.Column="0" Grid.Row="1"
                                                          rkt:SBGUIAttribute.SBString="ResetConfiguration"
                                                          ToolTip="Reset the configuration to the default values."
                                                          Command="rkt:SBCommands.ResetConfigurationCommand"
                                                          Margin="3" HorizontalAlignment="Right"
                                                          />

                                                <rkt:SBButton Style="{StaticResource SBLocalButtonStyle}"
                                                          Grid.Column="0" Grid.Row="2"
                                                          rkt:SBGUIAttribute.SBString="ReloadConfiguration"
                                                          ToolTip="Reload the configuration from the control configuration file."
                                                          Command="rkt:SBCommands.ReloadConfigurationCommand"
                                                          Margin="3" HorizontalAlignment="Right"
                                                          />

                                            </Grid>

                                        </Grid>

                                    </Border>

                                    <!-- ************************************************ -->
                                    <Grid DockPanel.Dock="Bottom"
                                          HorizontalAlignment="Right"
                                          Margin="0,3,3,5"
                                          >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <rkt:SBButton Style="{StaticResource SBLocalButtonStyle}"
                                                          Grid.Column="0" Grid.Row="1"
                                                          rkt:SBGUIAttribute.SBString="Save"
                                                          Command="rkt:SBCommands.CacheObjectCommand"
                                                          CommandParameter="{Binding Path=SBPlus.ApplicationDefinition, RelativeSource={RelativeSource TemplatedParent}}"
                                                          HorizontalAlignment="Right"
                                                          />

                                        <rkt:SBButton Style="{StaticResource SBLocalButtonStyle}"
                                                          Grid.Column="1" Grid.Row="1"
                                                          rkt:SBGUIAttribute.SBString="Cancel"
                                                          Command="rkt:SBCommands.DisposeCurrentFormCommand"
                                                          CommandParameter="SBClientConfiguration"
                                                          HorizontalAlignment="Right"
                                                          />

                                        <rkt:SBButton Style="{StaticResource SBLocalButtonStyle}"
                                                          Grid.Column="2" Grid.Row="1"
                                                          rkt:SBGUIAttribute.SBString="ClearCache"
                                                          ToolTip="Clear the local cache of any data downloaded from the server."
                                                          Command="rkt:SBCommands.ClearCacheCommand"
                                                          HorizontalAlignment="Right"
                                                          />

                                    </Grid>

                                    <TabControl DockPanel.Dock="Top" Width="810" Height="455" >
                                        <TabItem Header="Client">
                                                <ContentControl IsTabStop="False" Template="{StaticResource ClientConfigurationTemplate}" />
                                        </TabItem>
                                        <TabItem Header="Communications Server Connections">
                                            <ContentControl IsTabStop="False" Template="{StaticResource ConnectionsTemplate}" />
                                        </TabItem>
                                    </TabControl>
                                </DockPanel>
                            </ContentControl>
                        </ControlTemplate>
                            
                    </Setter.Value>

                </Setter> 
                
            </DataTrigger>
        </Style.Triggers>
        
    </Style>

</ResourceDictionary>