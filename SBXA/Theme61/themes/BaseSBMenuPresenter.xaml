    <ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rkt="http://schemas.sbxa.com/WPFControls"
    >

    <Style x:Key="BaseSBMenuPresenter" TargetType="{x:Type rkt:SBMenuPresenter}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="MenuBar" Value="{Binding Path=MenuBar, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type rkt:SBContentControl} }, Mode=OneWay}" />
        <Setter Property="ActiveToolbars" Value="{Binding Path=ActiveToolbars, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type rkt:SBContentControl} }, Mode=OneWay}" />
        <Setter Property="rkt:SBMenuPresenter.IsActionBarVisible" Value="True" />
        <Setter Property="rkt:SBMenuPresenter.IsButtonBarVisible" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type rkt:SBMenuPresenter}">
                    <Grid x:Name="PART_SBMenuGrid">
                        <DockPanel x:Name="PART_SBMenuPresenterPanel" LastChildFill="True">
                            <Grid x:Name="PART_SBMenuPresenterHorizontalGrid" DockPanel.Dock="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <ContentPresenter Content="{TemplateBinding MenuBar}" Grid.Row="0" />
                                <rkt:SBToolbarTray x:Name="PART_SBToolbarTray" Grid.Row="1"  Visibility="Hidden"/>
                            </Grid>
                            <Grid Background="Transparent"  DockPanel.Dock="Top" />
                        </DockPanel>
                    </Grid>
                    <!--<ContentPresenter />-->
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>