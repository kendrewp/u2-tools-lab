<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rkt="http://schemas.sbxa.com/WPFControls"
    xmlns:sbp="http://schemas.sbxa.com/WPFControls"
    >

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/Converters.xaml" />
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/SbControl.xaml" />
        <ResourceDictionary Source="/SBXAWinFxControls;component/Themes/BaseSBControlStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type rkt:SBMultiValueFieldRow}" x:Key="BaseSBMultiValueFieldRowStyle" >
        <Setter Property="rkt:SBUISupport.StyleName" Value="BaseSBMultiValueFieldStyle" />
        <Setter Property="Control.VerticalAlignment" Value="Top"/>
        <Setter Property="Control.HorizontalAlignment" Value="Left"/>
        <Setter Property="rkt:SBItemsControl.ItemsPanelTemplate" Value="{DynamicResource SBMultiValueFieldRowItemsPanelTemplate}"/>
        <Setter Property="rkt:SBItemsControl.ItemsTemplate" Value="{DynamicResource SBMultiValueFieldRowItemTemplate}"/>
        <Setter Property="rkt:SBItemsControl.ItemContainerStyle" Value="{DynamicResource SBMultiValueFieldRowItemContainerStyle}"/>
        <Setter Property="rkt:SBItemsControl.Template" Value="{DynamicResource SBMultiValueFieldRowItemsControlTemplate}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type rkt:SBMultiValueFieldRow}">
                    <ItemsControl ItemsSource="{TemplateBinding ItemsSource}"
                                  Template="{Binding Path=(rkt:SBItemsControl.Template), RelativeSource={RelativeSource TemplatedParent}}"
                                  ItemContainerStyle="{Binding Path=(rkt:SBItemsControl.ItemContainerStyle), RelativeSource={RelativeSource TemplatedParent}}"
                                  ItemTemplate="{Binding Path=(rkt:SBItemsControl.ItemsTemplate), RelativeSource={RelativeSource TemplatedParent}}"
                                  ItemsPanel="{Binding Path=(rkt:SBItemsControl.ItemsPanelTemplate), RelativeSource={RelativeSource TemplatedParent}}"
                                  />

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>