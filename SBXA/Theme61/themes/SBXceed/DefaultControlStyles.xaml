                <Setter Property="Width" Value="{Binding Path=GuiObjectDefinition.MaxChars, RelativeSource={RelativeSource Mode=Self}, Mode=OneWay, Converter={StaticResource SBCharCountConverter}}" />
                <Setter Property="Margin" Value="2" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

