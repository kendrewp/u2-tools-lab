<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:rkt="http://schemas.sbxa.com/WPFControls"
    xmlns:sbp="http://schemas.sbxa.com/WPFControls"
    >

    <ControlTemplate x:Key="SBFormContainerTemplate">
        <ContentControl x:Name="PART_SBFormContainer"
                        IsTabStop="False"
                        Content="{Binding Path=CurrentForm, RelativeSource={RelativeSource Mode=TemplatedParent }}"
                 />

    </ControlTemplate>

    <Style TargetType="{x:Type rkt:SBPlusWindow}">
        
        <Setter Property="rkt:SBControl.CanEnableGhost" Value="{Binding Path=CurrentForm.(rkt:SBControl.CanEnableGhost), RelativeSource={RelativeSource Mode=Self }}" />

        <Setter Property="Template" Value="{StaticResource SBFormContainerTemplate}" />

    </Style>

</ResourceDictionary>